{% extends 'base.html.twig' %}

{% block title %}Governance{% endblock %}

{% block content %}
<div class="content-container">
        <div class="container-fluid">
            <div class="jumbotron">
            <a href="{{ path('superadmin_home') }}">Gouvernances</a>
    <h1>Information sur la gouvernance de {{ governance.name }}</h1>
    <a href="{{ path('superadmin_governance_edit', {'id': governance.id}) }}" class="btn btn-warning">Modifier les informations</a>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ governance.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ governance.name }}</td>
            </tr>
            <tr>
                <th>Money_name</th>
                <td>{{ governance.moneyName }}</td>
            </tr>
        </tbody>
    </table>
        <h2>Utilisateurs associés à cette gouvernance</h2>
                <a href="{{ path('superadmin_admin_create', {'id': governance.id}) }}" class="btn btn-success">Créer un utilisateur pour cette gouvernance</a>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Email</th>
                    <th scope="col">Prénom</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Role</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
        {% for user in govUsersInformation %}
        {% set admin = user %}
                <tr>
                    <td>{{ user.user.id }}</td>
                    <td>{{ user.user.email }}</td>
                    <td>{{ user.firstName }}</td>
                    <td>{{ user.lastName }}</td>
                    <td>{{ user.role }}</td>
                    <td>
                        <a href="{{ path('superadmin_admin_edit', { 'id' : user.id }) }}" class="btn btn-warning">Modifier</a>
                        {{ include('superAdmin/admin/_delete_form.html.twig') }}
                    </td>
            {% endfor %}
                </tr>
            </tbody>
        </table>
        </div>
    </div>
</div>
{% endblock %}
